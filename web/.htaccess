RewriteEngine On

RewriteRule ^$ /html/index.html [L]

# Redirect specific files to their new path
RewriteRule ^background2\.png$ /img/background2.png [L,R=301]
RewriteRule ^crispy_trex_nobg\.png$ /img/crispy_trex_nobg.png [L,R=301]
RewriteRule ^site_preview\.jpg$ /img/site_preview.jpg [L,R=301]

# Specific rewrite for /mobile
RewriteRule ^mobile$ /index_mobile.html [L,R=302]

# Redirect all requests to index.html except the actual file or directory
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.html [QSA,L]

<FilesMatch "\.(js|css)$">
    FileETag None
    <IfModule mod_headers.c>
        Header unset ETag
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
    </IfModule>
</FilesMatch>